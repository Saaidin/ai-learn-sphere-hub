// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String
  coverImage  String
  author      String
  publishedAt DateTime
  tags        String[]
}

model Ebook {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String
  coverImage  String
  fileUrl     String
  author      String
  publishedAt DateTime
  category    String
  pages       Int
}

model Video {
  id          String   @id @default(uuid())
  title       String
  youtubeId   String   @unique
  description String
  thumbnail   String
  duration    Int
  publishedAt DateTime
  tags        String[]
}

model Donation {
  id          String   @id @default(uuid())
  amount      Float
  currency    String
  donorName   String
  donorEmail  String
  message     String?
  createdAt   DateTime @default(now())
  isAnonymous Boolean  @default(false)
}
